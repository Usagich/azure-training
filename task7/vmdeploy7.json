{
        "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#", 
        "contentVersion": "0.7", 
        "parameters": 
        { 
            "location": 
            {
                "type": "string"
            },
            "virtualMachineName": 
            {
                "type": "string"
            },
            "virtualMachineSize": 
            {
                "type": "string"
            },
            "adminUsername": 
            {
                "type": "string"
            },
            "virtualNetworkName": 
            {
                "type": "string"
            },
            "networkInterfaceName": 
            {
                "type": "string"
            },
            "networkSecurityGroupName": 
            {
                "type": "string"
            },
            "adminPassword": {
                "type": "securestring"
            },
            "storageAccountVM": 
            {
                "type": "string"
            },
            "storageAccountRestore": 
            {
                "type": "string"
            },
            "storageAccountType": 
            {
                "type": "string"
            },
            "addressPrefix": 
            {
                "type": "string"
            },
            "publicIpAddressName": 
            {
                "type": "string"
            },
            "publicIpAddressType": 
            {
                "type": "string"
            },
            "publicIpAddressSku": 
            {
                "type": "string"
            },
            "frontendSubnetName":
            {
                "type": "string"
            },
            "frontendPrefix":
            {
                "type": "string"
            },
            "backendSubnetName":
            {
                "type": "string"
            },
            "backendPrefix":
            {
                "type": "string"
            },
            "resourceGroupName":
            {
                "type": "string"
            },
            "vaultName":
            {
                "type": "string"
            },
            "vaultPolicyName":
            {
                "type": "string"
            },
            "vaultScheduleRunTimes":
            {
                "type": "array"
            },
            "vaultDailyRetentionDurationCount":
            {
                "type": "int"
            },
            "vaultDaysOfTheWeek":
            {
                "type": "array"
            },
            "vaultWeeklyRetentionDurationCount":
            {
                "type": "int"
            },
            "vaultMonthlyRetentionDurationCount":
            {
                "type": "int"
            },
            "vaultMonthsOfYear":
            {
                "type": "array"
            },
            "vaultYearlyRetentionDurationCount":
            {
                "type": "int"
            },
            "timeZone":
            {
                "type": "string"
            },
            "existingVirtualMachines":
            {
                "type": "array"
            },
            "vaultBackupName":
            {
                "type": "string"
            },
            "vaultNotification":
            {
                "type": "string"
            }
        }, 
        "variables": 
        { 
            "vnetId": "[resourceId(parameters('resourceGroupName'),'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
            "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('frontendSubnetName'))]"
        }, 
        "resources": 
        [ 
            {
                "name": "[parameters('storageAccountVM')]",
                "type": "Microsoft.Storage/storageAccounts",
                "apiVersion": "2016-01-01",
                "sku": 
                {
                    "name": "[parameters('storageAccountType')]"
                },
                "kind": "Storage",
                "location": "[parameters('location')]",
                "tags": {},
                "properties": {}

            },  
            {
                "name": "[parameters('storageAccountRestore')]",
                "type": "Microsoft.Storage/storageAccounts",
                "apiVersion": "2016-01-01",
                "sku": 
                {
                    "name": "[parameters('storageAccountType')]"
                },
                "kind": "Storage",
                "location": "[parameters('location')]",
                "tags": {},
                "properties": {}

            },     
            {
                "name": "[parameters('virtualNetworkName')]",
                "apiVersion": "2017-08-01",
                "type": "Microsoft.Network/virtualNetworks",
                "location": "[parameters('location')]",
                "properties": 
                {
                    "addressSpace": 
                    {
                        "addressPrefixes": 
                        [
                            "[parameters('addressPrefix')]"
                        ]
                    },
                        "subnets": [
                            {
                                "name": "[parameters('frontendSubnetName')]",
                                "properties": 
                                {
                                    "addressPrefix": "[parameters('frontendPrefix')]"
                                }
                            },
                            {
                                "name": "[parameters('backendSubnetName')]",
                                "properties": 
                                {
                                    "addressPrefix": "[parameters('backendPrefix')]"
                                }
                            }
                        ]
                    }
            },
            {
                "name": "[parameters('publicIpAddressName')]",
                "type": "Microsoft.Network/publicIpAddresses",
                "apiVersion": "2017-08-01",
                "location": "[parameters('location')]",
                "properties": 
                {
                    "publicIpAllocationMethod": "[parameters('publicIpAddressType')]"
                },
                "sku": 
                {
                    "name": "[parameters('publicIpAddressSku')]"
                }
            },
            {
                "name": "[parameters('networkSecurityGroupName')]",
                "type": "Microsoft.Network/networkSecurityGroups",
                "apiVersion": "2017-06-01",
                "location": "[parameters('location')]",
                "properties": 
                {
                    "securityRules": 
                    [
                        {
                            "name": "default-allow-rdp",
                            "properties": 
                            {
                                "priority": 1000,
                                "protocol": "TCP",
                                "access": "Allow",
                                "direction": "Inbound",
                                "sourceAddressPrefix": "*",
                                "sourcePortRange": "*",
                                "destinationAddressPrefix": "*",
                                "destinationPortRange": "3389"
                            }
                        }
                    ]
                }
            },
            {
                "name": "[parameters('networkInterfaceName')]",
                "type": "Microsoft.Network/networkInterfaces",
                "apiVersion": "2016-09-01",
                "location": "[parameters('location')]",
                "dependsOn": 
                [
                    "[concat('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]",
                    "[concat('Microsoft.Network/publicIpAddresses/', parameters('publicIpAddressName'))]",
                    "[concat('Microsoft.Network/networkSecurityGroups/', parameters('networkSecurityGroupName'))]"
                ],
                "properties": 
                {
                    "ipConfigurations": 
                    [
                        {
                            "name": "ipconfig1",
                            "properties": 
                            {
                                "subnet": 
                                {
                                    "id": "[variables('subnetRef')]"
                                },
                                "privateIPAllocationMethod": "[parameters('publicIpAddressType')]",
                                "publicIpAddress": 
                                {
                                    "id": "[resourceId(parameters('resourceGroupName'), 'Microsoft.Network/publicIpAddresses', parameters('publicIpAddressName'))]"
                                }
                            }
                        }
                    ],
                    "networkSecurityGroup": 
                    {
                        "id": "[resourceId(parameters('resourceGroupName'), 'Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroupName'))]"
                    }
                }
            },
            {
                "name": "[parameters('virtualMachineName')]",
                "type": "Microsoft.Compute/virtualMachines",
                "apiVersion": "2016-04-30-preview",
                "location": "[parameters('location')]",
                "dependsOn": 
                [
                    "[concat('Microsoft.Network/networkInterfaces/', parameters('networkInterfaceName'))]",
                    "[concat('Microsoft.Storage/storageAccounts/', parameters('storageAccountVM'))]"
                ],
                "properties": 
                {
                    "osProfile": 
                    {
                        "computerName": "[parameters('virtualMachineName')]",
                        "adminUsername": "[parameters('adminUsername')]",
                        "adminPassword": "[parameters('adminPassword')]",
                        "windowsConfiguration": 
                        {
                            "provisionVmAgent": "true"
                        }
                    },
                    "hardwareProfile": 
                    {
                        "vmSize": "[parameters('virtualMachineSize')]"
                    },
                    "storageProfile": 
                    {
                        "imageReference": 
                        {
                            "publisher": "MicrosoftWindowsServer",
                            "offer": "WindowsServer",
                            "sku": "2016-Datacenter",
                            "version": "latest"
                        },
                        "osDisk": 
                        {
                            "createOption": "fromImage",
                            "managedDisk": 
                            {
                                "storageAccountType": "[parameters('storageAccountType')]"
                            }
                        },
                        "dataDisks": []
                    },
                    "networkProfile": 
                    {
                        "networkInterfaces": 
                        [
                            {
                                "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaceName'))]"
                            }
                        ]
                    },
                    "diagnosticsProfile": 
                    {
                        "bootDiagnostics": 
                        {
                            "enabled": true,
                            "storageUri": "[reference(resourceId(parameters('resourceGroupName'), 'Microsoft.Storage/storageAccounts', parameters('storageAccountVM')), '2015-06-15').primaryEndpoints['blob']]"
                        }
                    }
                }
            },
            {
                "name": "[parameters('vaultName')]",
                "type": "Microsoft.RecoveryServices/vaults",
                "apiVersion": "2015-11-10",
                "location": "[parameters('location')]",
                "sku": 
                {
                  "name": "RS0",
                  "tier": "Standard"
                },
                "properties": {},
                "resources":
                [
                    {
                        "name": "defaultAlertSetting",
                        "type": "replicationAlertSettings",
                        "apiVersion": "2016-08-10",
                        "properties": {
                          "sendToOwners": "DoNotSend",
                          "customEmailAddresses": 
                          [
                            "naliaksandra.azure@gmail.com",
                            "Dzianis_Sinevich@epam.com"
                          ],
                          "locale": ""
                        },
                        "dependsOn":
                        [
                            "[concat('Microsoft.RecoveryServices/vaults/', parameters('vaultName'))]" 
                        ]
                    }
                ]
            },
            {
                "apiVersion": "2016-06-01",
                "name": "[concat(parameters('vaultName'), '/', parameters('vaultPolicyName'))]",
                "type": "Microsoft.RecoveryServices/vaults/backupPolicies",
                "dependsOn": 
                [ 
                    "[concat('Microsoft.RecoveryServices/vaults/', parameters('vaultName'))]" 
                ],
                "location": "[parameters('location')]",
                "properties": 
                {
                  "backupManagementType": "AzureIaasVM",
                  "schedulePolicy": 
                  {
                    "scheduleRunFrequency": "Daily",
                    "scheduleRunDays": null,
                    "scheduleRunTimes": "[parameters('vaultScheduleRunTimes')]",
                    "schedulePolicyType": "SimpleSchedulePolicy"
                  },
                  "retentionPolicy": 
                  {
                    "dailySchedule": 
                    {
                      "retentionTimes": "[parameters('vaultScheduleRunTimes')]",
                      "retentionDuration": 
                      {
                          "count": "[parameters('vaultDailyRetentionDurationCount')]",
                          "durationType": "Days"
                      }
                    },
                    "weeklySchedule": 
                    {
                      "daysOfTheWeek": "[parameters('vaultDaysOfTheWeek')]",
                      "retentionTimes": "[parameters('vaultScheduleRunTimes')]",
                      "retentionDuration": 
                      {
                        "count": "[parameters('vaultWeeklyRetentionDurationCount')]",
                        "durationType": "Weeks"
                      }
                    },
                    "monthlySchedule": 
                    {
                      "retentionScheduleFormatType": "Daily",
                      "retentionScheduleDaily": 
                      {
                        "daysOfTheMonth": 
                        [
                          {
                            "date": 1,
                            "isLast": false
                          }
                        ]
                      },
                      "retentionScheduleWeekly": null,
                      "retentionTimes": "[parameters('vaultScheduleRunTimes')]",
                      "retentionDuration": 
                      {
                        "count": "[parameters('vaultMonthlyRetentionDurationCount')]",
                        "durationType": "Months"
                      }
                    },
                    "yearlySchedule": 
                    {
                      "retentionScheduleFormatType": "Daily",
                      "monthsOfYear": "[parameters('vaultMonthsOfYear')]",
                      "retentionScheduleDaily": 
                      {
                        "daysOfTheMonth": 
                        [
                          {
                            "date": 1,
                            "isLast": false
                          }
                        ]
                      },
                      "retentionScheduleWeekly": null,
                      "retentionTimes": "[parameters('vaultScheduleRunTimes')]",
                      "retentionDuration": 
                      {
                        "count": "[parameters('vaultYearlyRetentionDurationCount')]",
                        "durationType": "Years"
                      }
                    },
                    "retentionPolicyType": "LongTermRetentionPolicy"
                  },
                  "timeZone": "[parameters('timeZone')]"
                }
            },
            {
                "name": "[concat(parameters('vaultName'), '/Azure/', 'IaasVMContainer;iaasvmcontainerv2;', parameters('resourceGroupName'),';',parameters('virtualMachineName'), '/VM;iaasvmcontainerv2;', parameters('resourceGroupName'), ';', parameters('virtualMachineName'))]",
                "apiVersion": "2016-06-01",
                "location": "[parameters('location')]",
                "type": "Microsoft.RecoveryServices/vaults/backupFabrics/protectionContainers/protectedItems",
                "copy": 
                {
                    "name": "task7VMback",
                    "count": 1
                },
                "properties": 
                {
                    "protectedItemType": "Microsoft.Compute/virtualMachines",
                    "policyId": "[resourceId('Microsoft.RecoveryServices/vaults/backupPolicies',parameters('vaultName'),parameters('vaultPolicyName') )]",
                    "sourceResourceId": "[resourceId(subscription().subscriptionId,parameters('resourceGroupName'),'Microsoft.Compute/virtualMachines',parameters('virtualMachineName'))]",
                    "containerName": "parameters('storageAccountRestore')"
                    
                },
                "dependsOn": 
                [
                    "[concat('Microsoft.Compute/virtualMachines/', parameters('virtualMachineName'))]",
                    "[concat('Microsoft.RecoveryServices/vaults/', parameters('vaultName'))]"    
                ]
            }
        ], 
        "outputs": 
        { 
        
        } 
}
